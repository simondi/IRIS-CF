@{
    Layout = null;
    ViewBag.Title = "Forgot Password Confirmation";
}

<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>CF | Reset Confirmation</title>

    <link href="../../css/bootstrap.min.css" rel="stylesheet">
    <link href="../../font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="../../css/plugins/iCheck/custom.css" rel="stylesheet">
    <link href="../../css/animate.css" rel="stylesheet">
    <link href="../../css/style.css" rel="stylesheet">

</head>

<body class="gray-bg">

    <div class="logocontainer">
        <img src="~/img/iSTAR logo.JPG" class="loginimage" />
    </div>

    <div class="loginmiddle-box text-center loginscreen  animated fadeInDown">
        <div>

            <h3>@ViewBag.Title.</h3>

            <div>
                <p>
                    Your password has been reset. Please @Html.ActionLink("click here to log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
                </p>
            </div>

            <p class="m-t"> <small>Designed By Erandika. &copy; 2015</small> </p>
        </div>
    </div>

    <script src="../../js/jquery-1.10.2.js"></script>
    <script src="../../js/bootstrap.min.js"></script>
    <script src="../../js/plugins/iCheck/icheck.min.js"></script>

    <script>
        $(document).ready(function () {
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });
    </script>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

</body>
</html>